# ==============================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES EXAMPLE
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# BACKEND CONFIGURATION
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=3001

# NetSuite Configuration
NETSUITE_BASE_URL=https://your-account.suitetalk.api.netsuite.com
SUITEQL_CONSUMER_KEY=your_consumer_key
SUITEQL_CONSUMER_SECRET=your_consumer_secret
SUITEQL_ACCESS_TOKEN=your_access_token
SUITEQL_TOKEN_SECRET=your_token_secret
SUITEQL_REALM=your_realm

# Auth0 Configuration (Backend)
AUTH0_CLIENT_ID=your_backend_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://your-domain.auth0.com/api/v2/
AUTH0_DOMAIN=your-domain.auth0.com

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8080

# Auth0 Configuration (Frontend)
REACT_APP_AUTH0_DOMAIN=your-domain.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your_frontend_auth0_client_id
REACT_APP_AUTH0_AUDIENCE=https://your-domain.auth0.com/api/v2/

# File URLs
BASE_FILE_URL_FOR_IMG=https://your-netsuite-domain.app.netsuite.com
REACT_APP_NO_IMAGE_AVAILABLE_LOGO=https://your-domain.com/path/to/no-image-available.png
